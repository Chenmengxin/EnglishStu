<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bdkj.com.englishstu.view.EditClassActivity">

    <include layout="@layout/action_top_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_word_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|top"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/regular_dimen_x12"
                android:text="单词朗读："
                android:layout_marginLeft="@dimen/regular_dimen_x30"
                android:textColor="@color/hint_grey"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_sentence_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|top"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/regular_dimen_x12"
                android:text="语句朗读："
                android:layout_marginLeft="@dimen/regular_dimen_x30"
                android:textColor="@color/hint_grey"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
